{
  "name": "system-redemption",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "server": "ts-node src/server.ts",
    "build": "concurrently 'yarn build:client' 'yarn build:server'",
    "build:client": "yarn prepare:client; webpack --debug",
    "build:server": "tsc",
    "watch": "concurrently 'yarn watch:client' 'yarn watch:server'",
    "watch:client": "yarn prepare:client; webpack --debug -w",
    "watch:server": "tsc -w",
    "prepare:client": "mkdir -p build/client; cp -r node_modules/@webcomponents/webcomponentsjs build/client/;  cp -r node_modules/three/build build/client/three; cp node_modules/lodash/lodash.* build/client/; cp node_modules/dat.gui/build/dat.gui.min.js build/client/",
    "test": "mocha -r ts-node/register src/test/**/*.test.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.japura.net/monofuel/system-redemption"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/dat.gui": "^0.7.2",
    "@types/express": "^4.16.0",
    "@types/jsdom": "^12.2.0",
    "@types/lodash": "^4.14.119",
    "@types/mocha": "^5.2.5",
    "@types/three": "^0.93.13",
    "@webcomponents/webcomponentsjs": "^2.2.1",
    "chai": "^4.2.0",
    "concurrently": "^4.1.0",
    "css-loader": "^2.0.1",
    "jsdom": "^13.1.0",
    "mocha": "^5.2.0",
    "node-sass": "^4.11.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "ts-loader": "^5.3.1",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.2.2",
    "webpack-bundle-analyzer": "^3.0.3",
    "webpack-cli": "^3.1.2",
    "webpack": "^4.27.1"
  },
  "dependencies": {
    "alea": "^1.0.0",
    "dat.gui": "^0.7.3",
    "express": "^4.16.4",
    "lodash": "^4.17.11",
    "simplex-noise": "^2.4.0",
    "three": "^0.99.0"
  }
}
