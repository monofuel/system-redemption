    "prepare:client": "ts-node ./build-src/main.ts",
    "test": "NODE_ENV=test jest --detectOpenHandles --projects ./ # ./src/elements",
    "coverage": "NODE_ENV=test jest  --projects ./ --coverage --coverageReporters=text-lcov | coveralls"
