{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "debug server",
            "console": "integratedTerminal",
            "type": "node",
            "request": "launch",
            "args": [
                "./src/server.ts"
            ],
            "runtimeArgs": [
                "--nolazy",
                "-r",
                "ts-node/register"
            ],
            "sourceMaps": true,
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
        },
        {
            "name": "all tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "stopOnEntry": false,
            "console": "integratedTerminal",
            "args": [
                "-r",
                "ts-node/register",
                "--no-timeouts",
                "src/test/**/*.test.ts"
            ]
        },
        {
            "name": "test current file",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "stopOnEntry": false,
            "console": "integratedTerminal",
            "args": [
                "-r",
                "ts-node/register",
                "--no-timeouts",
                "${file}"
            ]
        }
    ]
}